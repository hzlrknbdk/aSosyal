<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_16"
                android:layout_marginBottom="@dimen/margin_bottom_16"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left_16"
                    android:layout_marginLeft="@dimen/margin_left_16"
                    android:layout_marginTop="@dimen/margin_top_16"
                    android:layout_marginEnd="@dimen/margin_right_16"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_bottom_16"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/margin_left_16"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:layout_marginTop="@dimen/margin_top_16"
                        android:layout_marginEnd="@dimen/margin_right_16"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:fontFamily="sans-serif-regular"
                        android:text="@string/hey_hosgeldin"
                        android:textColor="@color/happy_orange"
                        android:textSize="@dimen/text_20"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/margin_left_16"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:layout_marginTop="@dimen/margin_top_8"
                        android:layout_marginEnd="@dimen/margin_right_16"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="start"
                        android:lineSpacingExtra="@dimen/lineSpacingExtra_4"
                        android:text="@string/acilis"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16"
                        tools:ignore="SpUsage" />


                    <EditText
                        android:id="@+id/createAccount_name"
                        style="@style/Font_family_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_person"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="@dimen/padding_8"
                        android:hint="@string/ad_soyad"
                        android:inputType="text"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:padding="@dimen/padding_16"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_16"
                        tools:ignore="LabelFor,SpUsage" />


                    <View
                        style="@style/Normal_Margin_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/view_line" />


                    <EditText
                        android:id="@+id/createAccount_email"
                        style="@style/Font_family_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/ic_email"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="@dimen/padding_8"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:padding="@dimen/padding_16"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_16"
                        tools:ignore="SpUsage" />


                    <View
                        style="@style/Normal_Margin_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/view_line" />


                    <EditText
                        android:id="@+id/createAccount_password"
                        style="@style/Font_family_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:drawableStart="@drawable/password"
                        android:drawableLeft="@drawable/password"
                        android:drawablePadding="@dimen/padding_8"
                        android:hint="@string/sifre"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="@dimen/padding_16"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="@dimen/text_16"
                        tools:ignore="SpUsage" />

                    <View
                        style="@style/Normal_Margin_Style"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/view_line" />
                    <!--
                                        <EditText
                                            android:id="@+id/createAccount_passwordAgain"
                                            style="@style/Font_family_light"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/transparent"
                                            android:drawableStart="@drawable/password"
                                            android:drawableLeft="@drawable/password"
                                            android:drawablePadding="@dimen/padding_8"
                                            android:hint="@string/sifre_tekrar"
                                            android:inputType="textPassword"
                                            android:maxLines="1"
                                            android:padding="@dimen/padding_16"
                                            android:textColor="@color/white"
                                            android:textColorHint="@color/white"
                                            android:textSize="@dimen/text_16"
                                            tools:ignore="SpUsage" />

                                        <View
                                            style="@style/Normal_Margin_Style"
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/dimen_1"
                                            android:background="@color/view_line" />-->


                </LinearLayout>

                <Button
                    android:id="@+id/createAccount_btn"
                    style="@style/Font_family_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_right_16"
                    android:layout_marginRight="@dimen/margin_right_16"
                    android:layout_marginBottom="@dimen/margin_bottom_16"
                    android:background="@drawable/custom_button"
                    android:text="@string/bize_katil"
                    android:textColor="@color/happy_orange"
                    android:textSize="@dimen/text_18"
                    tools:ignore="SpUsage" />

                <LinearLayout
                    android:id="@+id/existing_user_layout"
                    style="@style/Normal_Margin_Style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TV_Signin"
                        style="@style/Font_family_regular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_top_8"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="right|center"
                        android:text="Artık bir hesabım var!"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_14" />


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />


    </RelativeLayout>
</FrameLayout>