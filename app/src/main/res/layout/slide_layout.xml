<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="@dimen/dp150"
        android:layout_height="@dimen/dp150"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_image"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/slide_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           android:layout_marginLeft="@dimen/margin_16dp"
           android:layout_marginRight="@dimen/margin_16dp"
           android:layout_marginBottom="@dimen/margin_8"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/heading"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/slide_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingStart="@dimen/padding_30"
            android:paddingLeft="@dimen/padding_30"
            android:paddingEnd="@dimen/padding_30"
            android:paddingRight="@dimen/padding_30"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</RelativeLayout>