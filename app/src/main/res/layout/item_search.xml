<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_left_4"
            android:layout_marginLeft="@dimen/margin_left_4"
            android:layout_marginEnd="@dimen/margin_right_4"
            android:layout_marginRight="@dimen/margin_right_4"
            android:foreground="@drawable/trending_gradient"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/categoryImage"
                android:layout_width="match_parent"
                android:layout_height="130dp" />

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="Font_family_light"
                android:gravity="center"
                android:text="@string/category_name"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

        </FrameLayout>
    </LinearLayout>

</FrameLayout>
