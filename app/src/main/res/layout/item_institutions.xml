<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/items_Institutions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvInstitutions"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:layout_margin="@dimen/margin_5"
        android:padding="@dimen/padding_4"
        app:cardBackgroundColor="@color/colorBackground"
        app:cardCornerRadius="@dimen/radius_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/institutions_icon"
                android:layout_width="@dimen/dp65"
                android:layout_height="@dimen/dp65" />

            <TextView
                android:id="@+id/institutions_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="Font_family_light"
                android:gravity="center"
                android:text="@string/deneme"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

